<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="repository.openelec-addons" name="francescosoft's XBMC REPO" version="1.0" provider-name="francescosoft">
	<extension point="xbmc.addon.repository" name="francescosoft's Addon Repository">
		<info compressed="false">http://github.com/francescosoft/openelec-addons/raw/master/addons.xml</info>
		<checksum>http://github.com/francescosoft/openelec-addons/raw/master/addons.xml.md5</checksum>
		<datadir zip="true">http://github.com/francescosoft/openelec-addons/raw/master/zips</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>XBMC/OpenElec/RPI Addons</summary>
		<description>Download and install addons for XBMC and RPI.</description>
		<platform>all</platform>
	</extension>
</addon>

<addon id="service.multimedia.vdr-addon"
       name="vdr-addon"
       version="4.3.02"
       provider-name="openelec.tv">
  <requires>
    <import addon="os.openelec.tv" version="4.0"/>
    <import addon="xbmc.python" version="2.1.0"/>

  </requires>
  <extension point="xbmc.service"
             library="default.py">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>vdr: A powerful DVB TV application</summary>
    <description>
This project describes how to build your own digital satellite receiver and video disk recorder. It is based mainly on the DVB-S digital satellite receiver card, which used to be available from Fujitsu Siemens and the driver software developed by the LinuxTV project.
    </description>
    <disclaimer>

    </disclaimer>
    <platform>all</platform>
  </extension>
</addon>

<addon id="plugin.video.vdrmanager" name="VDR Manager" version="0.4" provider-name="francescosoft">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.xbmcswift2" version="2.4.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.repository" name="francescosoft's Addon Repository">
    <info compressed="false">http://github.com/francescosoft/openelec-addons/raw/master/addons.xml</info>
    <checksum>http://github.com/francescosoft/openelec-addons/raw/master/addons.xml.md5</checksum>
    <datadir zip="true">http://github.com/francescosoft/openelec-addons/raw/master/zips</datadir>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <language></language>
    <summary>Summary for "VDR Manager"</summary>
    <description>Description for "VDR Manager"</description>
  </extension>
</addon>
</addons>
