<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.multimedia.vdr-addon"
       name="vdr-addon"
       version="4.3.01"
       provider-name="openelec.tv">
  <requires>
    <import addon="os.openelec.tv" version="4.0"/>
    <import addon="xbmc.python" version="2.1.0"/>

  </requires>
  <extension point="xbmc.service"
             library="default.py">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.repository" name="francescosoft's Addon Repository">
    <info compressed="false">http://github.com/francescosoft/openelec-addons/raw/master/addons.xml</info>
    <checksum>http://github.com/francescosoft/openelec-addons/raw/master/addons.xml.md5</checksum>
    <datadir zip="true">http://github.com/francescosoft/openelec-addons/raw/master/zips</datadir>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>vdr: A powerful DVB TV application</summary>
    <description>
This project describes how to build your own digital satellite receiver and video disk recorder. It is based mainly on the DVB-S digital satellite receiver card, which used to be available from Fujitsu Siemens and the driver software developed by the LinuxTV project.
    </description>
    <disclaimer>

    </disclaimer>
    <platform>all</platform>
  </extension>
</addon>
